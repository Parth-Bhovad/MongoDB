<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <a href="/">Back to home</a>
    <h1>All User</h1>
         <div class="users">
         <% if(users.length > 0){ %>
            <% users.forEach((user) => { %>
                <div class="user">
                    <div class="img">
                        <img src=" <%= user.image %> " alt="">
                    </div>
                    <h3> <%= user.name %></h3>
                    <h5> <%= user.email %></h5>
                    <div class="links">
                        <a href="/edit/<%=user._id%>">Edit User</a>
                        <a href="/delete/<%=user._id%> ">Delete User</a>
                    </div>
                </div>
            <%  }) %>
      <%   } else{ %>
<h3>No users found</h3>
   <%   } %>
         </div>
</body>
</html>